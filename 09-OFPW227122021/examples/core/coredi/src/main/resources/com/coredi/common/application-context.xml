<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="messageWriter" class="com.coredi.beans.MessageWriter">
		<property name="messageFormatter" ref="htmlMessageFormatter" />
	</bean>

	<bean id="htmlMessageFormatter"
		class="com.coredi.beans.HTMLMessageFormatterImpl" />

	<bean id="pdfMessageFormatter"
		class="com.coredi.beans.PDFMessageFormatterImpl" />
</beans>
